@{
    ViewData["Title"] = "繪製公司營運管理指標";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<canvas id="myChart" width="400" height="400"></canvas>


<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'radar',
        data: {
            labels: ['生產管理', '財務管理', '人才管理', '行銷管理', '研發管理', '品牌管理'],
            datasets: [{
                label: '天貓購物網站',
                
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor:'rgb(0,0,0)',
                pointStyle: 'circle',
                pointBackgroundColor: 'rgb(0,0,255)',
                pointRadius: 5,
                pointHoverRadius: 10,
                data: [90,82,88,65,70,66]
            }]
        },
        options: {
            responsive:true,
            legend: {
                position: 'top',
                labels: {fontColor: 'black', fontSize:24}
            },
            title: {
                display: true,
                text: '公司營運指標',
                fontSize: 26,
            },
            scale: {
                ticks: {
                    beginAtzero:true
                },
                pointLabels: {
                    fontSize:20
                }
            }
        }
    });

</script>
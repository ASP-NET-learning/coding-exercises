@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

@{ 
    var score = 96;
}
@if (score < 60)
{
    <p>@(score)分 : 不及格</p>
}
else if (score >= 60 && score < 85)
{
    <p>
        成績尚可
    </p>
}
else
{
    <p>優異</p>
}

@{ 
    var portNumber = 587;
}
@switch (portNumber)
{
    case 80: <p>Http</p> break;
    case 110: <p>POP3</p> break;
    case 143: <p>IMAP</p> break;
    case 443: <p>Https</p> break;
    case 587: <p>SMTP</p> break;
    default: <p>Error</p> break;
}

@{ 
    var ports = new[]
    {
        new {portNumber = 80, description = "Http"},
        new {portNumber = 110, description = "POP3"},
        new {portNumber = 143, description = "IMAP"},
        new {portNumber = 443, description = "Https"},
        new {portNumber = 587, description = "SMTP"}
    };
}

<h5>@@for</h5>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>PORT</th>
            <th>說明</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0;i<ports.Length; i++)
            {
                <tr>
                    <td>@ports[i].portNumber</td>
                    <td>@ports[i].description</td>
                </tr>
            }
    </tbody>
</table>

<ul>
    @foreach(var p in ports)
    {
        <li>@p.portNumber, @p.description</li>
    }
</ul>

@{ var index = 0; }
@while(index < ports.Length)
{
    var port = ports[index];
    <p>@port.portNumber, @port.description</p>
    index++;
}

@{ var idx = 0; }
@do
{
    var port = ports[idx];
    @: @port.portNumber, @port.description <br />
    idx++;
} while (idx < ports.Length);
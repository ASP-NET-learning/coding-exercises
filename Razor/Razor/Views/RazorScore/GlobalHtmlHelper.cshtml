@model IEnumerable<Razor.Models.Student>

@{
    ViewBag.Title = "GlobalHtmlHelper";
}

<h2>GlobalHtmlHelper</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chinese)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.English)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Math)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
        </tr>
    <thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @MyHelper.DisplayScore(item.Chinese)
                </td>
                <td>
                    @MyHelper.DisplayScore(item.English)
                </td>
                <td>
                    @MyHelper.DisplayScore(item.Math)
                </td>
                <td>
                    @MyHelper.DisplayTopScore(item.Id, ViewBag.TopId, item.Total)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
         }
    </tbody>
 </table>

@section topCss{
    <link href="~/www/css/customStyle.css" rel="stylesheet" />
}
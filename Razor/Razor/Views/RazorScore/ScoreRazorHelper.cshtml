@model IEnumerable<Razor.Models.Student>

@{
    ViewBag.Title = "ScoreRazorHelper";
}

<h2>ScoreRazorHelper</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.Name)</td>
            <td>@DisplayScore(item.Chinese)</td>
            <td>@DisplayScore(item.English)</td>
            <td>@DisplayScore(item.Math)</td>
            <td>@DisplayScore(item.Total)</td>
        </tr>
    }
</table>


@helper DisplayScore(int score)
{
    if (score < 60)
    {
        <td class="poor">@score</td>
    }
    else if (score > 87)
    {
        <td class="excellent">@score</td>
    }
    else
    {
        <td>@score</td>
    }
}

@helper DisplayTopScore(int id, int topId, int total)
{
    if (id == topId)
    {
        <td class="top1">@(total)</td>
    }
    else
    {
        <td>@(total)</td>
    }
}


@section topCss
{
    <style type="text/css">
        th {
            color: white;
            background-color: black;
            text-align: center;
        }

        .table > tobody > tr:hover {
            background-color: antiquewhite !important;
        }

        .poor {
            color: white !important;
            background-color: red !important;
        }

        .excellect {
            background-color: aqua !important;
        }

        .top1 {
            background-color: yellow !important;
            border: 2px dashed black !important;
            font-weight: 900;
            font-size: 1.2em;
        }

            .top1::after {
                content: ("總分第一");
            }
    </style>
}















